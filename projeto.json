    "funcoes_principais": [
      "carregarCards()",
      "inicializarCarrosselDestaque()",
      "carregarDetalhes()"
    ],
    "eventos": [
      "DOMContentLoaded",
      "click nos botões do carrossel",
      "click nos indicadores",
      "hover nos cards"
    ]
  },
  "recursos_externos": {
    "bootstrap": "5.3.2",
    "google_fonts": "Orbitron",
    "cdn": "jsdelivr.net"
  }
}
