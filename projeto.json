{
  "projeto": {
    "nome": "GRID BR",
    "tipo": "Site sobre Fórmula 1",
    "tecnologias": ["HTML", "CSS", "JavaScript", "Bootstrap"],
    "estrutura": {
      "paginas": ["index.html", "detalhes.html"],
      "estilos": "styles.css",
      "scripts": "app.js"
    }
  },
  "html": {
    "index": {
      "doctype": "<!DOCTYPE html>",
      "estrutura": {
        "head": {
          "charset": "UTF-8",
          "viewport": "width=device-width, initial-scale=1.0",
          "titulo": "GRID BR - Home",
          "stylesheets": [
            "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css",
            "https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap",
            "./styles.css"
          ]
        },
        "body": {
          "classes": "bg-dark text-white",
          "header": {
            "logo": {
              "src": "img/F1-Logo.png",
              "alt": "Logo GRID BR",
              "dimensoes": "40x40px"
            },
            "titulo": "GRID BR",
            "navegacao": ["Início", "Coleções", "Próximos GP's", "Sobre"]
          },
          "main": {
            "banner": {
              "src": "img/largada.jpg",
              "alt": "Banner do Site",
              "dimensoes": "100% x 60vh"
            },
            "texto_intro": "Na velocidade da Fórmula 1, o GRID BR te conecta ao universo completo da categoria."
          },
          "secoes": [
            {
              "nome": "Item em Destaque",
              "id": "destaque-container"
            },
            {
              "nome": "Saiba mais sobre o universo da F1",
              "id": "cards-container"
            }
          ],
          "informacoes_aluno": {
            "nome": "Daniel Aguiar Pacheco",
            "curso": "Engenharia de Software",
            "social": "@dn.pacheco",
            "contato": "danielaguiarpacheco@gmail.com"
          }
        }
      }
    },
    "detalhes": {
      "estrutura_similar": "index.html",
      "elementos_unicos": {
        "container_detalhes": "detalhes-container",
        "imagens_adicionais": "imagens-adicionais"
      }
    }
  },
  "css": {
    "font_family": "Orbitron, sans-serif",
    "cores_principais": {
      "fundo_escuro": "#0d0d0d",
      "fundo_header": "#1a1a1a",
      "vermelho_f1": "#e10600",
      "branco": "#fff"
    },
    "componentes_estilizados": {
      "header": {
        "border_bottom": "2px solid #e10600"
      },
      "cards": {
        "hover_effect": "transform: scale(1.05)",
        "border_hover": "#e10600",
        "transition": "transform 0.3s ease"
      },
      "carrossel": {
        "altura_imagens": "400px",
        "botao_navegacao": {
          "tamanho": "50x50px",
          "cor_fundo": "rgba(225, 6, 0, 0.8)"
        }
      }
    }
  },
